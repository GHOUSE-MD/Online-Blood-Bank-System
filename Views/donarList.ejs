<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('includes/head.ejs')%>
    <link rel="stylesheet" href="/styles/confirm.css" />
    <link rel="stylesheet" href="/styles/donarList.css">
    <title>Document</title>
</head>

<body>
  <%- include('includes/header.ejs')%>

    <main>
      <ol id="ordered-list">
        <% if(!infos || infos.length===0){ %>
          <h1 style="text-align: center;">No Donar are available</h1>
          <% }else{ let count =0; %>
            <% for(const info of infos){ %>
              <% for(const reason of reasons) {%>
                <% if(info.bg.name==reason.bg.name){ %>
                  <li id="list-item"><%- include('includes/card.ejs',{info:info})%></li>
                  <%count++ } %>
                  <% }} %>
                  <% if(count===0){ %>
                    <h1 style="text-align: center;">No Donar available</h1>
                <% } }%>
      </ol>
    </main>

    <%- include('includes/footer.ejs')%>
</body>

</html>