<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head.ejs')%>
    <link rel="stylesheet" href="/styles/needBlood.css" />
    <script src="/scripts/needBlood.js" defer></script>
    <script src="/scripts/location.js" defer></script>
    <title>Document</title>
  </head>
  <body>
    <%- include('includes/header.ejs')%>
    <main>
      <h1>Need Blood</h1>
      <section id="coordinates">
        <!-- <p>Click the button to get your coordinates.</p>
        <button onclick="getLocation()">Try It</button> -->
        <p id="demo1" name="demo1"></p>
        <p id="demo2" name="demo2"></p>
      </section>
      <section id="need-blood-form">
        <form action="/needBlood" method="post">
          <section id="section-1">
            <ul>
              <li>
                <input id="lat" name="demo1" type="text" />
                <input id="long" name="demo2" type="text" />

                <label for="bloodgroup">Blood group</label>
                <select name="bloodgroup" id="bloodgroup" required>
                  <% for(const bg of bgs) { %>
                  <option value="<%=bg._id %>"><%= bg.name %></option>
                  <% } %>
                </select>
              </li>
              <section>
                <li>
                  <label for="mandal">mandal</label>
                  <select id="mandal" name="mandal" required>
                    <% for(const mandal of mandals) {%>
                    <option value="<%=mandal._id %>"><%= mandal.name %></option>
                    <% } %>
                  </select>
                </li>
              </section>
              <li>
                <label for="reason">Reason</label>
                <textarea name="reason" id="reason" rows="6"></textarea>
              </li>
            </ul>
          </section>

          <section id="section-2">
            <button name="submit" type="submit">SUBMIT</button>
          </section>
        </form>
      </section>
    </main>
    <%- include('includes/footer.ejs')%>
  </body>
</html>
